<odoo>
  <data>

    <record model="ir.ui.view" id="view_order_form_sale_extend">
      <field name="name">sale.order.form.extend</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_id']" position="after">
              <field name="reference_number"/>
              <field name="insurance_number"/>
          </xpath>
      </field>
    </record>
      
   <record model="ir.ui.view" id="view_account_invoice_ext_inherit">
      <field name="name">view.account.invoice.ext.inherit</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
          <xpath expr="//page[@name='other_info']//field[@name='origin']" position="after">
              <field name="reference_number"/>
              <field name="insurance_number"/>
          </xpath>
      </field>
    </record>  
  </data>
</odoo>
